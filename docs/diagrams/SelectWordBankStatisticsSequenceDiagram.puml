@startuml
!include style.puml

box UI UI_COLOR_T1
participant ":UI" as UI UI_COLOR
end box

box AppManager APPMANAGER_COLOR_T1
participant ":AppManager" as AppManager APPMANAGER_COLOR
end box

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":BankCommand" as BankCommand LOGIC_COLOR_T2
end box

box ParserManager PARSERMANAGER_COLOR_T1
participant ":ParserManager" as ParserManager PARSERMANAGER_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR_T3
end box


[-> UI : execute("bank pokemon")
activate UI

UI -> AppManager : executeCommand\n("bank pokemon")
activate AppManager

AppManager -> LogicManager : execute\n("bank pokemon")
activate LogicManager

LogicManager -> ParserManager : parseCommand("bank pokemon")
activate ParserManager

ParserManager --> LogicManager: command
deactivate ParserManager

create BankCommand
LogicManager -> BankCommand : command.execute()
activate BankCommand

BankCommand -> Model : setWordBankStatistics()
activate Model #blue
note right: The active WordBankStatistics\nis set in Model by BankCommand
deactivate Model

BankCommand --> LogicManager: commandResult
deactivate BankCommand

LogicManager --> AppManager: commandResult
destroy BankCommand
deactivate LogicManager
AppManager --> UI
deactivate AppManager


deactivate AppManager

[<- UI : update\n UI Component


@enduml
